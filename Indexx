<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Parallax Photo Album</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      font-family: sans-serif;
      scroll-behavior: smooth;
      background: #000;
    }

    .section {
      position: relative;
      width: 100%;
      min-height: 100vh;
      overflow: hidden;
    }

    .parallax-img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 120%; /* a bit larger for smoother parallax */
      object-fit: cover;
      transform: translateY(0);
      will-change: transform;
    }

    .spacer {
      height: 100vh;
      background: #000;
    }
  </style>
</head>
<body>

  <div class="section">
    <img class="parallax-img" src="https://drive.google.com/uc?export=view&id=YOUR_IMAGE_ID_1" alt="Photo 1">
  </div>

  <div class="spacer"></div>

  <div class="section">
    <img class="parallax-img" src="https://drive.google.com/uc?export=view&id=YOUR_IMAGE_ID_2" alt="Photo 2">
  </div>

  <div class="spacer"></div>

  <div class="section">
    <img class="parallax-img" src="https://drive.google.com/uc?export=view&id=YOUR_IMAGE_ID_3" alt="Photo 3">
  </div>

  <script>
    window.addEventListener('scroll', function() {
      const parallaxImages = document.querySelectorAll('.parallax-img');
      parallaxImages.forEach(function(img) {
        const speed = 0.3;
        const offset = window.scrollY - img.parentElement.offsetTop;
        img.style.transform = `translateY(${offset * speed}px)`;
      });
    });
  </script>

</body>
</html>
